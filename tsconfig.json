{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "lib": [
      "ESNext",
    ],
    "module": "ESNext",
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "dist"
  ]
}